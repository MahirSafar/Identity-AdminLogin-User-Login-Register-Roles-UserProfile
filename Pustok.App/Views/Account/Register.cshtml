@model UserRegisterVm
<div class="container">
<div class="row justify-content-center">
<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
	<!-- Login Form s-->
	<form method="post">
		<div class="login-form">
			<h4 class="login-title">New Customer</h4>
			<p><span class="font-weight-bold">I am a new customer</span></p>
			<div class="row">
				<div class="col-md-12 col-12 mb--15">
					<label asp-for="Fullname" ></label>
							<input asp-for="Fullname" class="mb-0 form-control" type="text"
								   placeholder="Enter your full name">
                            <span asp-validation-for="Fullname" class="text-danger"></span>
				</div>
				<div class="col-12 mb--20">
					<label asp-for="Email"></label>
							<input asp-for="Email" class="mb-0 form-control" type="email"  placeholder="Enter Your Email Address Here..">
							<span asp-validation-for="Email" class="text-danger"></span>

				</div>
						<div class="col-12 mb--20">
							<label asp-for="Username"></label>
							<input asp-for="Username" class="mb-0 form-control"  placeholder="Enter Your Email Address Here..">
							<span asp-validation-for="Username" class="text-danger"></span>

						</div>
				<div class="col-lg-6 mb--20">
					<label asp-for="Password" ></label>
							<input asp-for="Password" class="mb-0 form-control" type="password" id="password" placeholder="Enter your password">
                            <span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="col-lg-6 mb--20">
					<label asp-for="ConfirmPassword"></label>
					<input asp-for="ConfirmPassword" class="mb-0 form-control" type="password" id="repeat-password" placeholder="Repeat your password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				
				</div>
				<div class="col-md-12">
					<button type="submit"class="btn btn-outlined">Register</button>
				</div>
				<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			</div>
		</div>
	</form>
</div>
</div>
</div>