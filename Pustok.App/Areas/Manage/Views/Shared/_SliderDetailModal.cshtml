@model Slider

<div class="modal-header">
    <h5 class="modal-title">Slider Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <img src="~/assets/image/bg-images/@Model.ImageUrl" alt="Alternate Text" />
            </div>
            <div class="form-group">
                <label>Slider Title</label>
                <input type="text" class="form-control" disabled value="@Model.Title">
            </div>
            <div class="form-group">
                <label>Slider Description</label>
                <input type="text" class="form-control" disabled value="@Model.Description">
            </div>
            <div class="form-group">
                <label>Slider Button Text</label>
                <input type="text" class="form-control" disabled value="@Model.ButtonText">
            </div>
            <div class="form-group">
                <label>Slider Button Link</label>
                <input type="text" class="form-control" disabled value="@Model.ButtonLink">
            </div>
            <div class="form-group">
                <label>Slider Order</label>
                <input type="text" class="form-control" disabled value="@Model.Order">
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>