@model List<Book>

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h2>Book List</h2>
        </div>
        <div class="col text-end">
            <a asp-area="Manage" asp-controller="Book" asp-action="Create" class="btn btn-success ">Create New Book</a>
        </div>
        <div class="col text-end">
            <a asp-area="Manage" asp-controller="Book" asp-action="ExportData" class="btn btn-warning">Export a books</a>
        </div>
        <div class="col text-end">
            <a asp-area="Manage" asp-controller="Book" asp-action="ImportData" class="btn btn-primary import-btn">Import a books</a>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Author Name</th>
                    <th scope="col">Genre Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/image/products/@item.MainImageUrl" style="height: 50px; width: 50px" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Author.Name</td>
                        <td>@item.Genre.Name</td>
                        <td>
                            <a asp-area="Manage" asp-controller="Book" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-primary detail-btn" data-id="@item.Id">Details</a>
                            <a asp-area="Manage" asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-area="Manage" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="importModal" tabindex="-1" role="dialog" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function(){
            // Delete functionality
            $(".delete").click(function(e){
                e.preventDefault();
                let url = $(this).attr("href");
                Swal.fire({
                    title: "Are you sure?",
                    showCancelButton: true,
                    confirmButtonText: "Delete"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(url).then(res=>{
                            if(res.ok) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "Your file has been deleted.",
                                    icon: "success"
                                });
                                window.location.reload();
                            }
                            else{
                                Swal.fire({
                                    title: "Error!",
                                    text: "Something went wrong.",
                                    icon: "error"
                                });
                            }
                        });
                    }
                });
            });
            
            // Import Modal functionality
            $(".import-btn").click(function(e) {
                e.preventDefault();
                let url = $(this).attr("href");

                fetch(url)
                    .then(response => response.text())
                    .then(html => {
                        $("#importModal .modal-content").html(html);
                        $("#importModal").modal('show');
                        // Initialize the import form after the modal content is loaded
                        initializeImportForm();
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Failed to load import form');
                    });
            });
        });
    </script>

}